---
import  { type BreadcrumbModel } from '../model';

interface Props {
  items: Array<BreadcrumbModel>
}

const {items} = Astro.props;
---

<nav aria-label="Breadcrumb" class="mb-6 block">
  <ol class="flex text-sm md:text-lg text-color-200">
    {
      items.map((breadcrumb, index) =>
        (
          <div>
            <a class="text" href={breadcrumb.route}>{breadcrumb.name}</a>
              {index < items.length - 1 ? (
              <span class="md:mx-3 md:inline-block">/</span>
                ) : null}
          </div>            
        ))
    }
  </ol>
</nav>