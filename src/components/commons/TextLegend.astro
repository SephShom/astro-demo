---
interface Props {
  text: string;
  dark: boolean;
}

const {text, dark} = Astro.props;
---

<div>
  {dark ? 
    <div class="md:text-6xl text-4xl font-bold text-color-50">
      {text}
    </div>
    :
    <div class="md:text-6xl text-4xl font-bold text-color-950">
      {text}
    </div>}
</div>
