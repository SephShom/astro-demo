---
import PageIcon from './icons/PageIcon';

interface Props {
  id: number;
  route?: string;
  name: string;
  brief?: string;
  icon: string;
}

const {id, route, name, brief, icon} = Astro.props;
---

<a href={route ? route : ''}>
  <div class="flex flex-col md:flex-row items-center gap-7 text-color-200 transition ease-in-out duration-1000 hover:scale-110 hover:text-accent-all">
    <div class="mt-3">
      <PageIcon iconName={icon} size={90}></PageIcon>
    </div>
    <div class="flex flex-col gap-3 text-center md:text-start">
      <h3 class="text-2xl font-semibold">{name}</h3>
      <p class="w-10/12 md:w-max">{brief ? brief : ''}</p>
    </div>
  </div>
</a>