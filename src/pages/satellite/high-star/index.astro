---
import type { BreadcrumbModel } from "../../../components/navigation/model";
import CardFeature from "../../../components/commons/CardFeature.astro";
import Layout from "../../../layouts/Layout.astro";
import Breadcrumb from "../../../components/navigation/Breadcrumb/Breadcrumb.astro";
import Button from "../../../components/commons/Button";
import SmallButton from "../../../components/commons/SmallButton";
import TextCaption from "../../../components/commons/TextCaption.astro";
import TextDescription from "../../../components/commons/TextDescription.astro";
import TextLegend from "../../../components/commons/TextLegend.astro";
import PageIcon from "../../../components/commons/icons/PageIcon";
import CardService from "../../../components/commons/CardService.astro";

const breadcrumbs: BreadcrumbModel[] = [
  {
    id: 1,
    name: 'Inicio',
    route: '/'
  },
  {
    id: 2,
    name: 'Servicios',
    route: '/satellite'
  },
  {
    id: 3,
    name: 'High Speed Broadband',
    route: '/satellite/high-star'
  }
];
const caption1 = { text: "CONECTIVIDAD", dark: false };
const legend1 = { text: "Acerque la empresa en tiempo real", dark: false };
const description1 = { text: "Con la red de comunicaciones más completa del mundo respaldada por más capacidad satelital que cualquier otro proveedor", dark: false };
const caption2 = { text: "CARACTERÍSTICAS", dark: false };
const legend2 = { text: "Red de transporte híbrida global", dark: false };
const description2 = { text: 'Satélite, fibra, celular, microondas, MPLS e IP', dark: false };
const caption3 = { text: "", dark: true };
const legend3 = { text: "Despliegue", dark: true };
const description3 = { text: '', dark: true };

const features = [
  {
    id: 1,
    name: 'Satélites altamente avanzados que operan en órbita LEO',
    brief: 'Velocidades de descarga de 100 Mbps a 350 Mbps y latencia de 20 ms'
  },
  {
    id: 2,
    name: 'Diversidad y redundancia',
    brief: 'Apto para superposición con servicios geo y 4G/5G tradicionales'
  },
  {
    id: 3,
    name: 'Edge Computing',
    brief: 'Maximice la potencia de cómputo perimetral para almacenar, procesar, analizar y transportar datos de IoT en ubicaciones remotas'
  }
];
const services = [
  {
    id: 1,
    route: '/satellite/high-star',
    name: 'Antena',
    brief: 'Matriz electrónica en fase, 6Kg aprox., WiFi doble banda 5-3x3 MIMO',
    icon: 'starantena'
  },
  {
    id: 2,
    route: '/satellite/high-star',
    name: 'Enrutador',
    brief: 'Tecnología Wi-Fi: 802.11ac de doble banda, WPA2, hasta 128 dispositivos concurrentes',
    icon: 'router'
  },
  {
    id: 3,
    route: '/satellite',
    name: 'Fuente de alimentación',
    brief: 'Peso 1.5kg, 100-240V - 6.3A 50 - 60 Hz, montaje en pared incluido',
    icon: 'power'
  }
];
---

<Layout title="High Star">
  <>
      <div class="pt-12 h-[60vh] bg-color-800 flex flex-col items-center justify-center gap-9">
        <h2 class="text-color-200 text-5xl text-center">High Speed Broadband</h2>
        <Breadcrumb items={breadcrumbs}></Breadcrumb>
      </div>
      <section class="bg-[url(/images/services/starlink05.png)] bg-no-repeat bg-right xl:bg-contain bg:cover">
        <div class="grid grid-cols-1 md:grid-cols-2 bg-gradient-to-br from-color-200 via-color-50 via-40% md:bg-gradient-to-r md:from-color-200 md:via-color-50 md:via-40% ps-7 pe-7 pt-20 pb-20">
          <div class="flex flex-col justify-center gap-3 p-5">
            <TextCaption text={caption1.text} dark={caption1.dark}></TextCaption>
            <TextLegend text={legend1.text} dark={legend1.dark}></TextLegend>
            <TextDescription text={description1.text} dark={description1.dark}></TextDescription>
            <a href={'/contact'}>
              <Button>Contáctanos</Button>
            </a>
          </div>
        </div>
      </section>
      <section>
        <div class="flex flex-col w-full gap-3 bg-[url('/images/backgrounds/banner-featured-1.jpg')] bg-cover pt-20 pb-20">
          <div class="flex flex-col justify-start items-start ms-10 mt-10 gap-3">
            <TextCaption text={caption3.text} dark={caption3.dark}></TextCaption>
            <TextLegend text={legend3.text} dark={legend3.dark}></TextLegend>            
          </div>
          <div class="grid md:grid-cols-3 p-5 gap-10">
            {services.map(service => <CardService id={service.id} route={service.route} name={service.name} brief={service.brief} icon={service.icon} ></CardService>)}
          </div>
        </div>
      </section>
      <section class="bg-color-300">
        <div class="bg-[url(/images/backgrounds/banner-featured-2.png)] bg-no-repeat bg-cover md:h-[72vh] grid md:grid-cols-2 p-10">
          <div class="flex flex-col justify-center gap-3 p-5">
            <TextCaption text={caption2.text} dark={caption2.dark}></TextCaption>
            <TextLegend text={legend2.text} dark={legend2.dark}></TextLegend>
            <TextDescription text={description2.text} dark={description2.dark}></TextDescription>
          </div>
          <div class="flex flex-col justify-center gap-5">
            {
              features.map(feature => <CardFeature id={feature.id} name={feature.name} brief={feature.brief}></CardFeature>)
            }
          </div>
        </div>
      </section>
      <section class="bg-color-900">
        <div class="grid md:grid-cols-3 p-5 gap-10">
          <div class="text-center rounded-lg shadow-md h-max p-5 xl:p-10 w-[95vw] md:w-72 text-color-900 bg-gradient-to-bl from-color-200 to-color-50 hover:bg-gradient-to-tr overflow-hidden">
            <div class="flex flex-col gap-5">
              <div class="font-bold">
                Mobile Priority 500GB
              </div>
              <div class="text-3xl font-bold mb-5">
                $us 793/<span class="text-xl">mes</span>
              </div>
            </div>
            <div>
              <ul class="flex flex-col gap-3 items-center">
                <li>
                  500GB/mes
                </li>
                <li class="flex gap-1">
                  <PageIcon iconName="arrowDown" size={20}></PageIcon>
                  350Mbps
                  <PageIcon iconName="arrowUp" size={20}></PageIcon>
                  40Mbps
                </li>
                <li class="flex flex-col">
                  <div>
                    Equipo*
                  </div>
                  <div>
                    $us 377/mes ó $us 3997
                  </div>
                </li>
              </ul>
              <a href={'/contact'} class="m-5">
                <SmallButton>Contáctanos</SmallButton>
              </a>
            </div>
          </div>
          <div class="text-center rounded-lg shadow-md h-max p-5 xl:p-10 w-[95vw] md:w-72 text-color-900 bg-gradient-to-bl from-color-200 to-color-50 hover:bg-gradient-to-tr overflow-hidden">
            <div class="flex flex-col gap-5">
              <div class="font-bold">
                Mobile Priority 1TB
              </div>
              <div class="text-3xl font-bold mb-5">
                $us 2577/<span class="text-xl">mes</span>
              </div>
            </div>
            <div>
              <ul class="flex flex-col gap-3 items-center">
                <li>
                  1TB/mes
                </li>
                <li class="flex gap-1">
                  <PageIcon iconName="arrowDown" size={20}></PageIcon>
                  350Mbps
                  <PageIcon iconName="arrowUp" size={20}></PageIcon>
                  40Mbps
                </li>
                <li class="flex flex-col">
                  <div>
                    Equipo*
                  </div>
                  <div>
                    $us 377/mes ó $us 3997
                  </div>
                </li>
              </ul>
              <a href={'/contact'} class="m-5">
                <SmallButton>Contáctanos</SmallButton>
              </a>
            </div>
          </div>
          <div class="text-center rounded-lg shadow-md h-max p-5 xl:p-10 w-[95vw] md:w-72 text-color-900 bg-gradient-to-bl from-color-200 to-color-50 hover:bg-gradient-to-tr overflow-hidden">
            <div class="flex flex-col gap-5">
              <div class="font-bold">
                Mobile Priority 5TB
              </div>
              <div class="text-3xl font-bold mb-5">
                $us 12513/<span class="text-xl">mes</span>
              </div>
            </div>
            <div>
              <ul class="flex flex-col gap-3 items-center">
                <li>
                  5TB/mes
                </li>
                <li class="flex gap-1">
                  <PageIcon iconName="arrowDown" size={20}></PageIcon>
                  350Mbps
                  <PageIcon iconName="arrowUp" size={20}></PageIcon>
                  40Mbps
                </li>
                <li class="flex flex-col">
                  <div>
                    Equipo*
                  </div>
                  <div>
                    $us 377/mes ó $us 3997
                  </div>
                </li>
              </ul>
              <a href={'/contact'} class="m-5">
                <SmallButton>Contáctanos</SmallButton>
              </a>
            </div>
          </div>
        </div>
      </section>
</Layout>