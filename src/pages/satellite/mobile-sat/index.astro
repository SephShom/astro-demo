---
import type { BreadcrumbModel } from "../../../components/navigation/model";
import CardFeature from "../../../components/commons/CardFeature.astro";
import Layout from "../../../layouts/Layout.astro";
import Breadcrumb from "../../../components/navigation/Breadcrumb/Breadcrumb.astro";
import Button from "../../../components/commons/Button";
import TextCaption from "../../../components/commons/TextCaption.astro";
import TextDescription from "../../../components/commons/TextDescription.astro";
import TextLegend from "../../../components/commons/TextLegend.astro";

const breadcrumbs: BreadcrumbModel[] = [
    {
      id: 1,
      name: 'Inicio',
      route: '/'
    },
    {
      id: 2,
      name: 'Servicios',
      route: '/satellite'
    },
    {
      id: 3,
      name: 'Internet Portátil',
      route: '/satellite/mobile-sat'
    }
  ];
  const caption1 = { text: "SOLUCIÓN PORTÁTIL", dark: false };
  const legend1 = { text: "Simple, ligero, potente", dark: false };
  const description1 = { text: "Conectividad portable bajo demanda, cualquiera sea tu localización", dark: false };
  const caption2 = { text: "DESPLIEGUE", dark: false };
  const legend2 = { text: "Conectado en tres pasos", dark: false };
  const description2 = { text: "Desempaque, conecte, apunte", dark: false };
  const caption3 = { text: "CARACTERISTICAS", dark: false };
  const legend3 = { text: "Toda la potencia, simplificada", dark: false };
  const description3 = { text: "", dark: false };
  const features = [
    {
      id: 1,
      name: 'Antena Portátil',
      brief: 'Diseño compacto y ligero (1.7Kg)'
    },
    {
      id: 2,
      name: 'Modem y Batería Integrados',
      brief: 'Multiples adaptadores para recarga externa'
    },
    {
      id: 4,
      name: 'Panel de Control',
      brief: 'Interfaz de usuario estandar BGAN Launchpad'
    },
    {
      id: 5,
      name: 'Conectividad Inalámbrica',
      brief: 'Datos IP sin cables de alta velocidad (hasta 550 kbps) (1 MB con 2 equipos) y red conectada a circuito'
    },
    {
      id: 6,
      name: 'Robusto y Resistente',
      brief: 'Para soportar condiciones ambientales adversas, como lluvia, polvo o temperaturas extremas'
    },
    {
      id: 7,
      name: 'Rápida Puesta en Marcha',
      brief: 'Configuración estándar y de fácil uso'
    },
    {
      id: 8,
      name: 'Seguridad y Cifrado',
      brief: 'Soporte para L-BanProtocolos de seguridad para proteger la integridad y confidencialidad de los datos transmitidosd, Ku-band, Ka-band'
    }
  ];
---

<Layout title="Portatil Satelital">
  <div class="pt-12 h-[60vh] bg-color-800 flex flex-col items-center justify-center gap-9">
    <h2 class="text-color-200 text-5xl text-center">Internet Satelital Portátil</h2>
    <Breadcrumb items={breadcrumbs}></Breadcrumb>
  </div>
  <main class="">
    <section class="bg-[url(/images/services/bgan02.jpg)] bg-no-repeat bg-right">
      <div class="grid grid-cols-1 md:grid-cols-2 bg-gradient-to-br from-color-200 via-color-50 via-40% md:bg-gradient-to-r md:from-color-200 md:via-color-50 md:via-40% ps-7 pe-7 pt-20 pb-20">
        <div class="flex flex-col justify-center items-start gap-3 p-5">
          <TextCaption text={caption1.text} dark={caption1.dark}></TextCaption>
          <TextLegend text={legend1.text} dark={legend1.dark}></TextLegend>
          <TextDescription text={description1.text} dark={description1.dark}></TextDescription>
          <a href={'/contact'}>
            <Button>Contáctanos</Button>
          </a>              
        </div>
      </div>
    </section>        
    <section class="bg-color-300">
      <div class="bg-[url(/images/backgrounds/banner-featured-2.png)] bg-no-repeat md:h-max p-10 flex flex-col overflow-hidden">
        <div class="flex flex-col justify-center gap-3 p-5">
          <TextCaption text={caption3.text} dark={caption3.dark}></TextCaption>
          <TextLegend text={legend3.text} dark={legend3.dark}></TextLegend>
          <TextDescription text={description3.text} dark={description3.dark}></TextDescription>
        </div>
        <div class="grid md:grid-cols-2 gap-5">
          {
            features.map(feature => <CardFeature id={feature.id} name={feature.name} brief={feature.brief}></CardFeature>)
          }
        </div>
      </div>
    </section>
    <section class="bg-[url(/images/backgrounds/bgan02.jpg)] bg-no-repeat">
      <div class="ps-7 pe-7 pt-20 pb-20 bg-gradient-to-br from-color-200 via-color-50 via-40%">
        <div class="flex flex-col items-center p-5 gap-5">
          <TextCaption text={caption2.text} dark={caption2.dark}></TextCaption>
          <TextLegend text={legend2.text} dark={legend2.dark}></TextLegend>
          <TextDescription text={description2.text} dark={description2.dark}></TextDescription>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 pt-8 pb-8 gap-3">
        </div>
      </div>
    </section>
  </main>
</Layout>