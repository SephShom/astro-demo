---
import type { BreadcrumbModel } from "../../../components/navigation/model";
import CardFeature from "../../../components/commons/CardFeature.astro";
import Layout from "../../../layouts/Layout.astro";
import Breadcrumb from "../../../components/navigation/Breadcrumb/Breadcrumb.astro";
import Button from "../../../components/commons/Button";
import TextCaption from "../../../components/commons/TextCaption.astro";
import TextDescription from "../../../components/commons/TextDescription.astro";
import TextLegend from "../../../components/commons/TextLegend.astro";

const breadcrumbs: BreadcrumbModel[] = [
    {
      id: 1,
      name: 'Inicio',
      route: '/'
    },
    {
      id: 2,
      name: 'Servicios',
      route: '/satellite'
    },
    {
      id: 3,
      name: 'BackUp & Redundancia',
      route: '/satellite/backup-sat'
    }
  ];
  const caption1 = { text: "MANTENGA SU NEGOCIO CONECTADO", dark: false };
  const legend1 = { text: "Su primera opción para respaldo de Internet empresarial", dark: false };
  const description1 = { text: "Internet satelital es una conexión secundaria diversa y resistente que mantiene su negocio en línea cuando falla su conexión principal.", dark: false };
  const caption2 = { text: "CARACTERISTICAS", dark: false };
  const legend2 = { text: "Por qué su empresa necesita Internet de respaldo de trisecom", dark: false };
  const description2 = { text: '', dark: false };
  
  const features = [
    {
      id: 1,
      name: 'Menos tiempo de inactividad',
      brief: 'Continúe ejecutando aplicaciones esenciales y mantenga a los empleados conectados si su servicio principal falla'
    },
    {
      id: 2,
      name: 'Resiliencia +  Redundancia',
      brief: 'Manténgase en línea cuando los servicios de Internet terrestre se desconecten debido a cortes, desastres o problemas de infraestructura local.'
    },
    {
      id: 3,
      name: 'Ahorro de costes',
      brief: 'Evite el impacto financiero negativo para su negocio cuando su conexión principal a Internet se corta'
    }
  ];
---

<Layout title="Backup">
  <div class="pt-12 h-[60vh] bg-color-800 flex flex-col items-center justify-center gap-9">
    <h2 class="text-color-200 text-5xl text-center">BackUp & Redundancia</h2>
    <Breadcrumb items={breadcrumbs}></Breadcrumb>
  </div>
  <section class="bg-[url(/images/backgrounds/backup01.jpg)] bg-no-repeat bg-right bg-contain">
    <div class="grid grid-cols-1 md:grid-cols-2 bg-gradient-to-r from-color-200 via-color-50 via-40% md:bg-gradient-to-r md:from-color-200 md:via-color-50 md:via-40% ps-7 pe-7 pt-20 pb-20">
      <div class="flex flex-col justify-center gap-3 p-5">
        <TextCaption text={caption1.text} dark={caption1.dark}></TextCaption>
        <TextLegend text={legend1.text} dark={legend1.dark}></TextLegend>
        <TextDescription text={description1.text} dark={description1.dark}></TextDescription>
        <a href={'/contact'}>
          <Button>Contáctanos</Button>  
        </a>            
      </div>
    </div>
  </section>
  <section class="bg-color-300">
    <div class="bg-[url(/images/backgrounds/banner-featured-2.png)] grid md:grid-cols-2 p-10">
      <div class="flex flex-col justify-center gap-3 p-5">
        <TextCaption text={caption2.text} dark={caption2.dark}></TextCaption>
        <TextLegend text={legend2.text} dark={legend2.dark}></TextLegend>
        <TextDescription text={description2.text} dark={description2.dark}></TextDescription>
      </div>
      <div class="flex flex-col justify-center gap-5">
        {
          features.map(feature => <CardFeature id={feature.id} name={feature.name} brief={feature.brief}></CardFeature>)
        }
      </div>
    </div>
  </section>
</Layout>