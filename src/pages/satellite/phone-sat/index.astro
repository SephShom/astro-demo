---
import type { BreadcrumbModel } from "../../../components/navigation/model";
import CardFeature from "../../../components/commons/CardFeature.astro";
import Layout from "../../../layouts/Layout.astro";
import Breadcrumb from "../../../components/navigation/Breadcrumb/Breadcrumb.astro";
import Button from "../../../components/commons/Button";
import TextCaption from "../../../components/commons/TextCaption.astro";
import TextDescription from "../../../components/commons/TextDescription.astro";
import TextLegend from "../../../components/commons/TextLegend.astro";

const breadcrumbs: BreadcrumbModel[] = [
    {
      id: 1,
      name: 'Inicio',
      route: '/'
    },
    {
      id: 2,
      name: 'Servicios',
      route: '/satellite'
    },
    {
      id: 3,
      name: 'Telefonía Satelital',
      route: '/satellite/phone-sat'
    }
  ];
  const caption1 = { text: "SECRETO DE ÉXITO", dark: false };
  const legend1 = { text: "Voz, mensajería de texto y llamadas de alerta", dark: false };
  const description1 = {text: 'Un teléfono satelital es un dispositivo de comunicación confiable que utiliza satélites en órbita para establecer conexiones en áreas donde la cobertura de redes terrestres es limitada o inexistente.', dark: false};
  const caption2 = { text: "CARACTERISTICAS", dark: false };
  const legend2 = { text: "Ideal para trabajos de campo y exploración", dark: false };
  const description2 = {text: 'Destinada a un segmento de usuarios que tienen la necesidad de una herramienta de comunicación confiable para voz, mensajería de texto y llamadas de alerta por situaciones de emergencia', dark: false};
  const features = [
    {
      id: 1,
      name: 'Equipos ligeros compactos y robustos',
      brief: 'Para una comunicación fluida entre teléfonos satelitales, teléfonos móviles y fijos a nivel mundial'
    },
    {
      id: 2,
      name: 'Kit completo apto para cualquier país',
      brief: 'Looking for something originalTodo tipo de adaptadores para tomas de corriente, batería de litio, auriculares, cargadores'
    },
    {
      id: 3,
      name: 'Baterías de litio',
      brief: 'duración de 8hrs de uso continuo, 160hrs en espera'
    },
    {
      id: 4,
      name: 'Botón de pánico',
      brief: 'Envío de localización por GPS y botón programable de emergencia'
    }
  ];
---

<Layout title="Telefonía satelital">
  <div class="pt-12 h-[60vh] bg-color-800 flex flex-col items-center justify-center gap-9">
    <h2 class="text-color-200 text-5xl text-center">Telefonía Satelital</h2>
    <Breadcrumb items={breadcrumbs}></Breadcrumb>
  </div>
  <main class="">
  <section class="bg-[url(/images/services/man-sat-phone.jpg)] bg-no-repeat lg:bg-right bg-center bg-cover">
      <div class="grid grid-cols-1 md:grid-cols-2 bg-gradient-to-br from-color-200 via-color-50 via-40% md:bg-gradient-to-r md:from-color-200 md:via-color-50 md:via-40% ps-7 pe-7 pt-20 pb-20">
        <div class="flex flex-col justify-center items-start gap-3 p-5">
          <TextCaption text={caption1.text} dark={caption1.dark}></TextCaption>
          <TextLegend text={legend1.text} dark={legend1.dark}></TextLegend>
          <TextDescription text={description1.text} dark={description1.dark}></TextDescription>
          <a href={'/contact'}>
            <Button>Contáctanos</Button>
          </a>              
        </div>
      </div>
    </section>
    <section class="bg-color-300">
    <div class="bg-[url(/images/backgrounds/banner-featured-2.png)] bg-no-repeat bg-cover grid md:grid-cols-2 p-10">
      <div class="flex flex-col justify-center gap-3 p-5">
        <TextCaption text={caption2.text} dark={caption2.dark}></TextCaption>
        <TextLegend text={legend2.text} dark={legend2.dark}></TextLegend>
        <TextDescription text={description2.text} dark={description2.dark}></TextDescription>
      </div>
      <div class="flex flex-col justify-center gap-5">
        {
          features.map(feature => <CardFeature id={feature.id} name={feature.name} brief={feature.brief}></CardFeature>)
        }            
      </div>
    </div>
    </section>
    
  </main>             
</Layout>