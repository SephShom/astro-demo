---
import type { BreadcrumbModel } from "../../../components/navigation/model";
import CardFeature from "../../../components/commons/CardFeature.astro";
import Layout from "../../../layouts/Layout.astro";
import Breadcrumb from "../../../components/navigation/Breadcrumb/Breadcrumb.astro";
import Button from "../../../components/commons/Button";
import TextCaption from "../../../components/commons/TextCaption.astro";
import TextDescription from "../../../components/commons/TextDescription.astro";
import TextLegend from "../../../components/commons/TextLegend.astro";
import PageIcon from "../../../components/commons/icons/PageIcon";

const breadcrumbs: BreadcrumbModel[] = [
    {
      id: 1,
      name: 'Inicio',
      route: '/'
    },
    {
      id: 2,
      name: 'Servicios',
      route: '/satellite'
    },
    {
      id: 3,
      name: 'Red Privada Satelital',
      route: '/satellite/link-sat'
    }
  ];
  const caption1 = { text: "ENLACE VPN", dark: false };
  const legend1 = { text: "Un túnel seguro de datos VPN para el enlace de sus oficinas remotas", dark: false };
  const description1 = { text: "", dark: false };
  const caption2 = { text: "¿COMO FUNCIONA?", dark: false };
  const legend2 = { text: "Agregar internet a la solucion es opcional", dark: false };
  const description2 = { text: "", dark: false };
  const caption3 = { text: "CARACTERISTICAS", dark: false };
  const legend3 = { text: "Integra tus aplicaciones empresariales", dark: false };
  const description3 = { text: "", dark: false };
  const features= [
    {
      id: 1,
      name: 'Canal dedicado y cifrado libre de ruidos',
      brief: 'Conexión punto a punto'
    },
    {
      id: 2,
      name: 'Seguridad en la transmisión',
      brief: 'La información pasa a través de un túnel sin interferencias'
    },
    {
      id: 3,
      name: 'Optimo para aplicaciones con ERPs',
      brief: 'Sus oficinas remotas se conectan directamente a sus servidores'
    }
  ];
---

<Layout title="Enlaces Satelitales">
  <div class="pt-12 h-[60vh] bg-color-800 flex flex-col items-center justify-center gap-9">
    <h2 class="text-color-200 text-5xl text-center">Red Privada Satelital</h2>
    <Breadcrumb items={breadcrumbs}></Breadcrumb>
  </div>
  <main class="bg-color-200">
    <section class="bg-[url(/images/services/vpn02.jpg)] bg-no-repeat bg-right bg-cover">
      <div class="grid grid-cols-1 md:grid-cols-2 bg-gradient-to-br from-color-200 via-color-50 via-40% md:bg-gradient-to-r md:from-color-200 md:via-color-50 md:via-40% ps-7 pe-7 pt-20 pb-20">
        <div class="flex flex-col justify-center items-start gap-3 p-5">
          <TextCaption text={caption1.text} dark={caption1.dark}></TextCaption>
          <TextLegend text={legend1.text} dark={legend1.dark}></TextLegend>
          <TextDescription text={description1.text} dark={description1.dark}></TextDescription>
          <a href={'/contact'}>
            <Button>Contáctanos</Button>
          </a>              
        </div>
      </div>
    </section>
    <section>
      <div class="flex flex-col items-center p-20 gap-5">
        <div class="flex flex-col items-center gap-8">
          <TextCaption text={caption2.text} dark={caption2.dark}></TextCaption>
          <TextLegend text={legend2.text} dark={legend2.dark}></TextLegend>
          <TextDescription text={description2.text} dark={description2.dark}></TextDescription>
        </div>
        <div class="flex justify-around items-center md:gap-5">
          <div class="flex flex-col items-center">
            <div class="border-solid border-4 border-color-500 rounded-full p-4">
              <PageIcon iconName="db" size={60}></PageIcon>
            </div>
            <p class="font-semibold">App Corporativa</p>
          </div>
          <div class="">
            <PageIcon iconName="arrowdoubleH" size={20}></PageIcon>
          </div>
          <div class="flex flex-col items-center">
            <div class="border-solid border-4 border-color-500 rounded-full p-4">
              <PageIcon iconName="shield" size={60}></PageIcon>
            </div>
            <p class="font-semibold">VPN trisecom</p>
          </div>
          <div class="">
            <PageIcon iconName="arrowdoubleH" size={20}></PageIcon>
          </div>
          <div class="flex flex-col items-center">
            <div class="border-solid border-4 border-color-500 rounded-full p-4">
              <PageIcon iconName="building" size={60}></PageIcon>
            </div>
            <p class="font-semibold">Oficina Remota</p>
          </div>
        </div>
      </div>
    </section>

    <section class="bg-color-400 w-screen">
      <div class="bg-[url(/images/backgrounds/banner-featured-2.png)] md:h-max grid md:grid-cols-2 p-10 overflow-hidden">
        <div class="flex flex-col justify-center gap-3 p-5">
          <TextCaption text={caption3.text} dark={caption3.dark}></TextCaption>
          <TextLegend text={legend3.text} dark={legend3.dark}></TextLegend>
          <TextDescription text={description3.text} dark={description3.dark}></TextDescription>
        </div>
        <div class="flex flex-col justify-center gap-5">
          {
            features.map(feature => <CardFeature id={feature.id} name={feature.name} brief={feature.brief}></CardFeature>)
          }
        </div>
      </div>
    </section>
</Layout>